<%layout("layouts/boilerplate")%>
<%layout("layouts/boilerplate")%>
<div class="row mt-3">
  <h1 class="col-6 offset-3">LOGIN FOR STAYLOFT</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" novalidate class="needs-validation" autocomplete="off">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
          autocomplete="off"
        />
        <div class="invalid-feedback">Entered Username does not exist</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input
          name="password"
          id="password"
          type="password"  
          class="form-control"
          required
          autocomplete="off"
        />
        <div class="invalid-feedback">Enter a valid password</div> <!-- Corrected the feedback -->
      </div>
      <button type="submit" class="btn btn-outline-success">
        Login
      </button>
    </form>
  </div>
</div>
