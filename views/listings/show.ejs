<% layout("layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>

<div class="row">
  <div class="col-8 offset-2 ">
    <div class="card col-6 offset-2 w-75">
      <h3><b><%= listing.title %></b></h3>
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body mt-3">
        <p class="card-text">
          <% if (listing.owner && listing.owner.username) { %>
            <b><i><%= listing.owner.username %></i></b>
          <% } else { %>
            <b><i>Owner not available</i></b>
          <% } %>
          <br />
          <b>Description: </b><%= listing.description %> <br />
          <b>Price: </b>&#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
          <b>Category : </b><%= listing.category %>
        </p>
      </div>

      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="show-btn">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-success">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
      <% } %>

      <hr />

      <!-- Review Form -->
      <div class="col-8 mb-3 mt-3">
        <form method="POST" action="/listings/<%= listing._id %>/reviews">
          <fieldset class="starability-grow">
            <legend>Rating:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <div class="mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea
              name="review[comment]"
              id="comment"
              cols="30"
              rows="5"
              class="form-control no-resize"
              required
            ></textarea>
            <div class="invalid-feedback">Please enter a valid review</div>
          </div>

          <button class="btn btn-outline-success mt-3">Submit</button>
        </form>
      </div>

      <!-- All Reviews -->
      <% if (listing.reviews.length > 0) { %>
      <div class="row">
        <h4>All Reviews</h4>
        <hr />
        <% for (let review of listing.reviews) { %>
        <div class="card review-card col-5 p-3 mt-2 ms-3">
          <div class="card-body">
            <h6 class="card-title">siddartha</h6> <!-- (Optional: replace with dynamic reviewer name later) -->
            <p class="starability-result" data-rating="<%= review.rating %>"></p>
            <p class="card-text">
              <%= review.comment %> <br />
            </p>
            <form
              class="mb-3"
              method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            >
              <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>

      
    </div>
    <!-- Map Section -->
    <h3 class="col-8 offset-2 mb-3">Where you'll be</h3>
    <div class="col-8 offset-2 mb-3 map-container">
      <div id="map"></div>
    </div>
  </div>
</div>

<script src="https://api.mapbox.com/mapbox-gl-js/v3.11.0/mapbox-gl.js"></script>
<script src="/js/map.js"></script>



